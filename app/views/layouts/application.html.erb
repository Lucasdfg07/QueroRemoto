<!DOCTYPE html>
<html>
  <head>
    <title>QueroRemoto</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="manifest" href="/manifest.json" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= favicon_link_tag asset_path('/icons/favicon.ico')%>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-166640476-1"></script>

    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-166640476-1');
    </script>
  </head>

  <body>
    <% if alert %>
      <p class="alert alert-danger alert"><%= alert %></p>
    <% end %>

    <% if notice %>
      <p class="alert alert-success notice"><%= notice %></p>
    <% end %>

    <%= yield %>

    <%= render 'shared/footer' %>
  </body>
</html>
